<!DOCTYPE html>
<html>
<head>
    <title>Booking List</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Booking List</h1>
    <a href="/bookings/add">Add New Booking</a>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Customer Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        <% bookings.forEach(booking => { %>
        <tr>
            <td><%= booking._id %></td>
            <td><%= booking.customerName %></td>
            <td><%= booking.date.toISOString().split('T')[0] %></td>
            <td><%= booking.time %></td>
            <td class="<%= booking.status.toLowerCase() %>"><%= booking.status %></td>
            <td>
                <a href="/bookings/edit/<%= booking._id %>">Edit</a>
                <form action="/bookings/cancel/<%= booking._id %>" method="POST" style="display:inline;">
                    <button type="submit">Cancel</button>
                </form>
            </td>
        </tr>
        <% }); %>
    </table>
</body>
</html>
